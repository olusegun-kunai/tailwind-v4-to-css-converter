{
  "name": "qwik-tailwind-to-css-modules",
  "version": "1.0.0",
  "description": "Convert Qwik components with Tailwind classes to CSS modules using UnoCSS",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test:basic": "tsx tests/basic.test.ts",
    "test:jsx": "tsx tests/jsx-parser.test.ts", 
    "test:converter": "tsx tests/converter.test.ts",
    "test:all": "npm run test:basic && npm run test:jsx && npm run test:converter",
    "demo": "npm run dev -- -i ./examples/checkbox.tsx -o ./demo-output -v",
    "clean": "rm -rf dist output test-output demo-output"
  },
  "keywords": [
    "tailwind",
    "css-modules", 
    "qwik",
    "unocss",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.6",
    "@unocss/core": "^0.58.3",
    "@unocss/preset-wind": "^0.58.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.48"
  }
}
